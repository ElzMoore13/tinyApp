<% if (username === undefined)  {%>

  <form class = 'form-inline' id="login" method="POST" action="/login">
    <input class ='form-control' type="text" name="username" placeholder="Username">
    <input class='btn btn-default' type="submit" name="login">
  </form>
<% } else { %>
  <form class='form-inline' id='logout' method="POST" action='/logout'>
    <label for="logout"><%- username %></label>
    <input class='btn btn-default' type="submit" name="logout" value="logout">
  </form>
</div>
<% } %>